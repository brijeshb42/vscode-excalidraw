{
	"name": "vscode-excalidraw",
	"displayName": "Excalidraw integration",
	"description": "Create and edit excalidraw compatible files in vscode directly.",
	"version": "0.0.2",
	"license": "GPL-3.0",
	"publisher": "brijeshb42",
	"icon": "icon.png",
	"repository": {
		"url": "https://github.com/brijeshb42/vscode-excalidraw.git"
	},
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:brijeshb42-excalidraw.deleteshape",
		"onCustomEditor:brijeshb42-excalidraw.texteditor"
	],
	"main": "./out/extension.js",
	"contributes": {
		"customEditors": [
			{
				"viewType": "brijeshb42-excalidraw.texteditor",
				"displayName": "Excalidraw",
				"selector": [
					{
						"filenamePattern": "*.excalidraw"
					}
				],
				"priority": "default"
			}
		],
		"keybindings": [
			{
				"command": "brijeshb42-excalidraw.deleteshape",
				"key": "Delete",
				"when": "editorIsOpen"
			}
		]
	},
	"scripts": {
		"build:excalidraw": "cd ../excalidraw && npm run build && cp -R build ../vscode-excalidraw/",
		"vscode:prepublish": "yarn run build:excalidraw && yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/finalhandler": "^1.1.0",
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.13.5",
		"@types/serve-static": "^1.13.3",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.30.0",
		"@typescript-eslint/parser": "^2.30.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.2",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"finalhandler": "^1.1.2",
		"serve-static": "^1.14.1"
	}
}
